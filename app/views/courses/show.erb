<h2>Welcome, <%= @current_student.name%></h2>
<h3><%=@course.name%></h3>

<br>

<%if @course.user_id == @current_student.id%>
    <div>
    <%Course.all.each do |c|%>
    <%if c.user_id == @current_student.id %>
        <h4><%=c.name%></h4>
   
        <p><%=c.description%></p>
       <%end%> 
    <%end%>
<%else%>

    <p>You Are Not Enrolled!</p>
    
   
<%end%>
<form method="POST" action="/courses">
<%# <%binding.pry%>
    <input id="<%@course.id%>" type="hidden" name="id" value="<%=@course.id%>">
  <input type="submit" value="Enroll in Course">
  
</form>

